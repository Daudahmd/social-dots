{
  "version": 2,
  "builds": [
    {
      "src": "socialdots/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/admin/(.*)",
      "dest": "/staticfiles/admin/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "socialdots/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "socialdots.settings",
    "VERCEL": "true"
  },
  "buildCommand": "pip install -r requirements.txt && rm -rf staticfiles && python manage.py collectstatic --noinput && python manage.py collect_admin_static --force --verbosity=2 && mkdir -p media/uploads",
  "outputDirectory": "staticfiles"
}
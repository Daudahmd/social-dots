{
    "version": 2,
    "builds": [
      {
        "src": "vercel_app.py",
        "use": "@vercel/python",
        "config": { 
          "maxLambdaSize": "50mb", 
          "runtime": "python3.11"
        }
      },
      {
        "src": "staticfiles/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/staticfiles/$1"
      },
      {
        "src": "/(.*)",
        "dest": "vercel_app.py"
      }
    ],
    "env": {
      "DEBUG": "False",
      "DJANGO_SETTINGS_MODULE": "socialdots.settings",
      "PYTHONPATH": "/var/task",
      "VERCEL_FORCE_REBUILD": "2025-09-09"
    },
    "functions": {
      "vercel_app.py": {
        "maxDuration": 30
      }
    }
}